<%include('../layouts/header.ejs')%>

<h1>Edit Users</h1>

<form action="" method="post">
  <input
    type="text"
    name="name"
    placeholder="Enter name"
    value="<%=user.name%>"
    required
  />
  <br /><br />
  <input
    type="text"
    name="email"
    placeholder="Enter email"
    value="<%=user.email%>"
    required
  />
  <br /><br />
  <input
    type="text"
    name="mno"
    placeholder="Enter mobile"
    value="<%=user.mobile%>"
    required
  />
  <br /><br />
  <label>Verified</label>
  <input type="radio" name="verify" value="1" <%if(user.is_verified ==
  1){%>checked<%}%>>
  <br /><br />
  <label>Unverified</label>
  <input type="radio" name="verify" value="0" <%if(user.is_verified ==
  0){%>checked<%}%> >
  <br /><br />
  <input type="hidden" name="id" value="<%=user._id%>" />
  <input type="submit" value="Update User" />
</form>

<a href="/admin/">Go Dashboard</a>

<%include('../layouts/footer.ejs')%>
